{% extends 'base.html.twig' %}

{% block title %}Docteur{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
{% endblock  %}
{% block body %}
<div class="container">
    <h1>Docteur</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ doctor.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ doctor.Prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ doctor.Adresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ doctor.Phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ doctor.Email }}</td>
            </tr>
            <tr>
                <th>Date De Naissance</th>
                <td>{{ doctor.DateDeNaissance ? doctor.DateDeNaissance|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="inline">
        <a class="alert alert-dark" href="{{ path('doctor_index') }}">Retour Ã  la liste</a>
    </div>
    <div class="inline">
        <a class="alert alert-warning" href="{{ path('doctor_edit', {'id': doctor.id}) }}">Modifier</a>
    </div>
    <div class="inline">
        {{ include('doctor/_delete_form.html.twig') }}
    </div>




</div>
{% endblock %}
