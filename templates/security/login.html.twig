{% extends 'base.html.twig' %}

{% block title %} Identification : {% endblock %}

{% block body %}
    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 ml-5">
                    Vous etes loggu√© en tant que {{ app.user.username }}
                </div>
            {% endif %}

            <h1 class="h3 mb-3 ml-5 font-weight-normal">Identifiez vous</h1>
                <div class="form-example">
                    <label class="mb-3 ml-5" for="inputUsername">Utilisateur</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control ml-5" required autofocus>
                </div>
                <div class="form-example">
                    <label class="mb-3 ml-5" for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control ml-5" required>
                </div>
               {# <input type="hidden" name="_target_path" value="{{ path('test') }}"/>#}
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>


            <button class="btn btn-primary btn-color btn-bg-color btn-sm col-xs-2 btn-primary-spacing" type="submit">
                Sign in
            </button>
                #}
                <div class="btn-toolbar4">
                    <button class="btn btn-primary btn-color btn-bg-color btn-sm col-xs-2 btn-primary-spacing" type="submit">
                        Connexion
                    </button>
                </div>

        </form>
    </div>
{% endblock %}

